prefix=@prefix@
libdir=$(prefix)/lib
OS=@OS@
export

.PHONY: @targets@ @installers@ install-headers install-config clean \
	intl-dummy examples

all: @targets@ intl-dummy

@target_rules@

@intl_dummy_rule@

examples:
	make -C examples

rhtv-config.exe: rhtv-config.c include/tv/configtv.h
	@GCC@ -o rhtv-config.exe -Iinclude rhtv-config.c

install-headers:
	@install_headers@

@install_rules@

@intl_dummy_install_rule@

install-config:
	install -d -m 0755 $(prefix)/bin
	install -m 0755 rhtv-config.exe $(prefix)/bin

install: @installers@ install-headers install-intl-dummy install-config

@clean@
